// Settings to override
// Linux $HOME/.config/Code/User/settings.json
// Windows %APPDATA%\Code\User\settings.json
// Mac $HOME/Library/Application Support/Code/User/settings.json
{
  "extensions.ignoreRecommendations": false,
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#ffffff"
  },
  "files.autoSave": "off",
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.historyExplorer.enabled": true,
  "html.format.contentUnformatted": "pre,code,textarea,title",
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "cSpell.language": "en,fr",
  "cSpell.userWords": [
    "circleci",
    "emblock",
    "ethereum",
    "evht",
    "Fruggr",
    "gcloud",
    "Lecan",
    "matomo",
    "merkle",
    "netlify",
    "oidc",
    "spacelephant",
    "spacelephantlabs",
    "unik",
    "unikname"
  ],
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
  "extension-manager.extensions": [
    "editorconfig.editorconfig",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "streetsidesoftware.code-spell-checker-french",
    "mauve.terraform",
    "octref.vetur",
    "robertohuertasm.vscode-icons"
  ],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/tmp/**": true,
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/dist/**": true
  },
  "workbench.enableExperiments": false,
  "telemetry.enableTelemetry": false,
  "cSpell.allowCompoundWords": true,
  "search.followSymlinks": false,
  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/tmp/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "vsicons.projectDetection.autoReload": true,
  "workbench.iconTheme": "vscode-icons",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [
      ".terraform/**/*",
      "**/.terraform/**/*"
    ]
  },
  "terraform.languageServer": {
    "external": true,
    "args": [
      "serve"
    ]
  },
  "typescript.tsdk": "/home/dlecan/.config/yarn/global/node_modules/typescript/lib/",
  "files.associations": {
    "*.mmd": "Mermaid"
  },
  "editor.mouseWheelZoom": true,
  "editor.fontFamily": "'JetBrains Mono, Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.fontWeight": "300",
  "editor.lineHeight": 22,
  "editor.letterSpacing": 1.2,
  "editor.renderLineHighlight": "all",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.bracketPairColorization.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "workbench.startupEditor": "none",
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "window.zoomLevel": 1,
  "GitLive.Issue tracker integration": "Disabled",
  "GitLive.Hide my activity graph": true,
  "git.autofetch": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
}
