// Settings to override
// Linux $HOME/.config/Code/User/settings.json
// Windows %APPDATA%\Code\User\settings.json
// Mac $HOME/Library/Application Support/Code/User/settings.json
{
  "window.zoomLevel": 1,
  "rust.mode": "rls",
  "rust.rustup": {
    "nightlyToolchain": "nightly-2017-05-03-x86_64-unknown-linux-gnu"
  },
  "rust.rls": {
    "useRustfmt": true
  },
  "extensions.ignoreRecommendations": false,
  "update.channel": "none",
  "workbench.colorCustomizations": {
    "editorLineNumber.activeForeground": "#ffffff"
  },
  "files.autoSave": "off",
  // Set the default
  "editor.formatOnSave": false,
  // Enable per-language
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true
  },
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.historyExplorer.enabled": true,
  "html.format.contentUnformatted": "pre,code,textarea,title",
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "cSpell.language": "en,fr",
  "cSpell.userWords": [
    "circleci",
    "ethereum",
    "netlify",
    "oidc",
    "spacelephant",
    "unik",
    "unikname"
  ],
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm:ss",
  "extension-manager.extensions": [
    "editorconfig.editorconfig",
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "streetsidesoftware.code-spell-checker-french",
    "mauve.terraform",
    "octref.vetur",
    "robertohuertasm.vscode-icons"
  ],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "workbench.enableExperiments": false,
  "telemetry.enableTelemetry": false,
  "cSpell.allowCompoundWords": true,
  "cSpell.enabled": false,
  "search.followSymlinks": false,
  "vsicons.projectDetection.autoReload": true,
  "workbench.iconTheme": "vscode-icons",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "terraform.indexing": {
    "enabled": false,
    "liveIndexing": false,
    "delay": 500,
    "exclude": [
      ".terraform/**/*",
      "**/.terraform/**/*"
    ]
  },
  "terraform.languageServer": {
    "external": true,
    "args": [
      "serve"
    ]
  },
  "typescript.tsdk": "/home/dlecan/.config/yarn/global/node_modules/typescript/lib/",
  "files.associations": {
    "*.mmd": "Mermaid"
  },
  "editor.mouseWheelZoom": true,
  "editor.fontFamily": "'JetBrains Mono, Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 13,
  "editor.fontWeight": "300",
  "editor.lineHeight": 22,
  "editor.letterSpacing": 1.2,
  "editor.renderLineHighlight": "all"
}
